<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityLogin">
    <View
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="@dimen/layout_paddingTop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="登录"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/login_img_concer"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/concer" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">
        <ImageView
            android:id="@+id/login_img_user"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/user"/>
        <EditText
            android:id="@+id/login_txt_user"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:background="@null"
            android:hint="@string/Login_user_hinttxt"
            android:textColor="@android:color/black"
            android:textSize="@dimen/editTxtSize"
            android:layout_toRightOf="@+id/login_img_user"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/red"
            android:layout_below="@+id/login_txt_user"
            android:layout_toRightOf="@id/login_img_user"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">
        <ImageView
            android:id="@+id/login_img_password"
            android:layout_width="30dp"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/password"/>
        <EditText
            android:id="@+id/login_txt_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="@string/login_pwd_hinttxt"
            android:textColor="@android:color/black"
            android:textSize="@dimen/editTxtSize"
            android:layout_toRightOf="@+id/login_img_password"
            android:layout_toLeftOf="@id/login_img_password_ear"/>
        <ImageView
            android:id="@+id/login_img_password_ear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/red"
            android:layout_below="@+id/login_txt_password"
            android:layout_toRightOf="@id/login_img_password"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/layout_paddingTop"
        android:paddingBottom="@dimen/layout_paddingTop"
        android:orientation="horizontal"
        android:gravity="center">
        <CheckBox
            android:id="@+id/checkBox_password"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="@color/fontcolor"
            android:checked="false"/>
        <CheckBox
            android:id="@+id/checkBox_login"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textColor="@color/fontcolor"
            android:checked="false"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/layout_paddingTop"
        android:text="登录"
        android:background="@drawable/shape_login"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"/>
<TextView
    android:id="@+id/login_regiter_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/login_registertext"
    android:textSize="15sp"
    android:paddingTop="@dimen/dp_20"
    android:layout_gravity="right"
    android:textColor="@color/blue"
    android:paddingRight="30dp"/>


</LinearLayout>