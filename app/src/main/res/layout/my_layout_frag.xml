<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_login_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/head"
            app:civ_border_color="@color/my_logobackground"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="请登录"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>
    <com.leon.lib.settingview.LSettingItem
        xmlns:leon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/record_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/record"
        leon:leftText="历史纪录" />
    <com.leon.lib.settingview.LSettingItem
        xmlns:leon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/collect_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/collect"
        leon:leftText="收藏" />
    <com.leon.lib.settingview.LSettingItem
        xmlns:leon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/comments_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/comment"
        leon:leftText="评论" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/my_fengexin"
        />
    <com.leon.lib.settingview.LSettingItem
        xmlns:leon="http://schemas.android.com/apk/res-auto"
        android:id="@+id/setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/set"
        leon:leftText="设置" />

</LinearLayout>
